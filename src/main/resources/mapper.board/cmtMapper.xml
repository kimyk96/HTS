<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hts.market.domain.board.repo.CmtRepo">



    <insert id="save">
        <selectKey keyProperty="brdNo" order="BEFORE" resultType="Long">
            select nvl(max(cmt_no),0)+1 from BOARD
        </selectKey>
        insert into board(cmt_no,brd_mem_no,cmt_content)

        values(#{cmtNo},#{brdMemNo}#{cmtContent})
    </insert>




    <!-- 제목, 내용, 조회수, 좋아요, 싫어요, 댓글수 중 사용자가 선택한 컬럼을 변경 -->
    <update id="update">


        <![CDATA[
            UPDATE
                COMMENT
            SET
                cmt_content=#{cmtContent}, cmt_mem_no=#{cmtMemNo}, cmt_no=#{cmtNo},
            WHERE
                 brdNo=#{brdNo}
        ]]>


    </update>


    <delete id="delete">
        <![CDATA[
            DELETE FROM
                COMMENT
            WHERE
                cmt_mem_no=#{cmtMemNo}
        ]]>
    </delete>

</mapper>
