    <!-- finAllAsSeller//  판매자로서의 채팅 내역-->
    <select id="findAllAsSeller" resultType="com.hts.market.domain.chat.dto.ChatDto$Pk">
        select
            c.chat_pdt_no,
            c.chat_checked,
            c.chat_mem_no,
            c.chat_created_at,
            c.chat_content
        from
            chat c left join product p on c.chat_pdt_no=p.pdt_no
        where
            p.pdt_seller_no= #{memNo} and c.chat_msg_no = (select max(chat_msg_no) from chat)
    </select>
