    <!-- findAllByChatMemNoAndChatPdtNoAndChatMsgNo // 회원간 채팅내역 -->
    <select id="findAllByChatMemNoAndChatPdtNo" resultType="com.hts.market.domain.chat.dto.ChatDto$Read">
        <![CDATA[
        SELECT
        b.*
        FROM
        (
        SELECT
        ROWNUM AS rnum,
        a.*
        FROM
        (
        SELECT
        *
        FROM
        chat
        WHERE
        chat_pdt_no=#{chatPdtNo} and chat_mem_no =#{chatMemNo}
        ORDER BY
        chat_msg_no DESC
        ) a
        WHERE
        ROWNUM <= #{end}
        ) b
        WHERE
        b.rnum >= #{start}

  ]]>
    </select>



