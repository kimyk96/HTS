<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hts.market.domain.member.repo.MemRoleRepo">
    <!-- 회원 권한 목록 조회 -->
    <select id="findAllByMemNo" resultType="com.hts.market.domain.member.dto.MemRoleDto$Read">
        Select * from MEMBER_ROLE where mem_no=#{memNo}
    </select>
    <!-- 권한부여 -->
    <insert id="save">
        insert into
        MEMBER_ROLE( mem_no, role_no)
        values
        ( #{memNo}, #{roleNo} )
    </insert>
</mapper>