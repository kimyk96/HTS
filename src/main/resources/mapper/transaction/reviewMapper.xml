<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hts.market.domain.transaction.repo.ReviewRepo">
   <!--후기 생성-->
    <insert id="save">
        <selectKey resultType="long" order="BEFORE" keyProperty="reviewNo">
            select nvl(max(review_no),0)+1 from REVIEW
        </selectKey>
        insert into
        REVIEW (review_no, review)
        values
        ( #{reviewNo}, #{review})
    </insert>
    <!--후기 삭제-->
    <delete id="delete">
        delete from
           REVIEW
        where
           review_no=#{reviewNo}
    </delete>

    <!--후기 업데이트-->
    <update id="update">

        update
            REVEIW
        set
            review_no=#{reviewNo}, review=#{review}
        where
            review_no=#{reviewNo}

    </update>

    <!--후기 읽기-->
    <select id="findByReviewNo" resultType="com.hts.market.domain.transaction.dto.ReviewDto$Read">
    <![CDATA[
            select
                review_no, review
            from
                REVIEW
            where
                review_no=#{reviewNo} and rownum <= 1
        ]]>
    </select>
</mapper>